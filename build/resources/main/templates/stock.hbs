{{#partial "content"}}

    <h1 style="text-align:center; font-weight:bolder;">Lion Bar Restaurant - Stock</h1>
    <hr>

    <div class="row">

        <div class="col-md-6">

            <form action="/stock" method="post" >

                <div class="form-group">
                    <label>Nom du produit</label>
                    <input type="text" name="name" class="form-control" required>
                </div>

                <div class="form-group">
                    <label>Quantité</label>
                    <input type="text" name="quantity" class="form-control" required>
                </div>

                <div class="form-group">
                    <label>Prix Unitaire</label>
                    <input type="text" name="priceUnit" class="form-control" required>
                </div>

                <button type="submit" class="btn btn-success">Submit</button>

            </form>

        </div>

        <div class="col-md-6">

            <h3>List des produits</h3>

            <table class="table">

                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Nom du produit</th>
                    <th scope="col">Quantité</th>
                    <th scope="col">Prix Unitaire</th>
                    <th scope="col">Prix Total</th>
                </tr>

                {{#each stock}}

                    <tr>
                        <td>{{date}}</td>
                        <td>{{name}}</td>
                        <td>{{quantity}}</td>
                        <td>{{priceUnit}}</td>
                        <td>{{totalPrice}}</td>
                        <td><button class="btn btn-danger"><a href="/delete/{{id}}">Supprimer</a></button></td>
                    </tr>


                {{/each}}

            </table>

        </div>

    </div>

{{/partial}}

{{>layout.hbs}}