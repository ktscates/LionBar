{{#partial "content"}}


    <h1 style="text-align:center; font-weight:bolder;">Lion Bar Restaurant - Boissons Stockés</h1>
    <hr>

    <h3>List des produits</h3>

    <table border="4" class="table">

        <tr>
            <th scope="col">Date</th>
            <th scope="col">Nom du produit</th>
            <th scope="col">Quantité</th>
            <th scope="col">Prix Unitaire</th>
            <th scope="col">Prix Total</th>
            <th scope="col"></th>
        </tr>

        {{#each drink}}

            <tr>
                <td>{{date}}</td>
                <td>{{drinkName}}</td>
                <td>{{quantity}}{{packDrink}}</td>
                <td>{{priceUnitDrink}}Fbu</td>
                <td>{{totalPriceDrink}}Fbu</td>
                <td><a class="btn btn-outline-danger" href="/deleteDrink/{{id}}">Supprimer</a></td>
            </tr>
        {{/each}}

    </table>

    </div>
    </div>


{{/partial}}

{{>layout.hbs}}
