{{#partial "content"}}

    <h1 style="text-align:center; font-weight:bolder;">Lion Bar Restaurant - Stockage D'aliment</h1>
    <hr>

    <div class="row">

        <div class="col-md-6">

            <form action="/stockFood" method="post" >

                <div class="form-group">
                    <label>Nom du produit</label>
                    <input type="text" name="foodName" class="form-control" required>
                </div>

                <div class="form-group">
                    <label>Quantit√©</label>
                    <input type="text" name="quantity" class="form-control" required>
                </div>

                <div class="form-group">
                    <label>Paquetage</label>
                    <select id="pack" name="pack" class="form-control">
                        <option value="Choisissez le paquetage">Choisissez le paquetage...</option>
                        <option value="kg">kg</option>
                        <option value="Piece">Piece</option>
                        <option value="Paquet">Paquet</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Prix Unitaire</label>
                    <input type="text" name="priceUnitFood" class="form-control" required>
                </div>



                <button type="submit" class="btn btn-success">Enregistrer</button>

            </form>

        </div>

    </div>

{{/partial}}

{{>layout.hbs}}